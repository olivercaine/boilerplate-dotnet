@{
    Layout = "~/Views/Templates/Master.cshtml";
    ViewBag.Title = "Sitemap";
    @model IList<SitemapItem>
}

@section body {
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h2>Sitemap</h2>
                <ul>
                    @foreach (var item in Model)
                    {
                        <li>
                            <a href="@item.Url">@item.Title</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
}